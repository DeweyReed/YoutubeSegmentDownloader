{
    "tasks": [
        {
            "name": "Run dotnet format on staged files",
            "group": "pre-commit",
            "pathMode": "relative",
            "command": "dotnet",
            "args": ["format", "YoutubeSegmentDownloader.sln", "--include", "${staged}"],
            "include": ["**/*.cs", "**/*.vb"]
        }
    ]
}
